<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<View-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="25dp"-->
    <!--android:layout_gravity="left"-->
    <!--android:layout_marginLeft="51dp"-->
    <!--android:background="@drawable/bg_dash_line"-->
    <!--android:layerType="software" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_one_title"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="一车信息"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/img_circle2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_one_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="开始时间："
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_one_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="结束时间："
                android:textColor="#ff333333"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/item_one_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="喷浆方量："
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_one_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="运行情况："
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_one_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="其他因素："
                android:textColor="#ff333333"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>