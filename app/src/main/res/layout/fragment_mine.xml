<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_order_fragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_mine_banner" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/mine_fragment_info_view"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="162dp"
            android:background="@drawable/shape_mine_info_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="61.5dp">

                <TextView
                    android:id="@+id/mine_fragemnt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:text="王宝强"
                    android:textColor="#333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/mine_fragemnt_jobnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="工号：89757"
                    android:textColor="#333333"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#515151" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff2d2d"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修记录"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月最高纪录0"
                        android:textColor="#D5D5D5"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:background="#515151" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff2d2d"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月历程"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月最高纪录0公里"
                        android:textColor="#D5D5D5"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:background="#515151" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff2d2d"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月评价"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月最高纪录0"
                        android:textColor="#D5D5D5"
                        android:textSize="10dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mine_fragment_header_view"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111.5dp"
            android:background="@drawable/img_head_bg">

            <com.gengli.technician.view.RoundImageView
                android:id="@+id/mine_fragemnt_change_header"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_mine_header" />

            <ImageView
                android:id="@+id/mine_fragemnt_change_tip"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_authentication" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_fragment_info_view"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_mine_info_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bt_mine_message"
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:id="@+id/img_tmp_mine_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mine_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_tmp_mine_1"
                    android:text="站内信息"
                    android:textColor="#090909"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="6.5dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_mine_more" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8" />

            <RelativeLayout
                android:id="@+id/bt_mine_record"
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:id="@+id/img_tmp_mine_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mine_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_tmp_mine_2"
                    android:text="浏览记录"
                    android:textColor="#090909"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="6.5dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_mine_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8" />

            <RelativeLayout
                android:id="@+id/bt_mine_change_phone"
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:id="@+id/img_tmp_mine_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mine_3" />

                <TextView
                    android:id="@+id/text_bind_change_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_tmp_mine_3"
                    android:text="绑定/更换手机号"
                    android:textColor="#090909"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/text_mine_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/text_bind_change_phone"
                    android:text="(15100000001)"
                    android:textColor="#090909"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="6.5dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_mine_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8" />

            <RelativeLayout
                android:id="@+id/bt_mine_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:id="@+id/img_tmp_mine_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mine_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_tmp_mine_4"
                    android:text="修改密码"
                    android:textColor="#090909"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="6.5dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_mine_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8" />

            <RelativeLayout
                android:id="@+id/bt_mine_clear"
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:id="@+id/img_tmp_mine_5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mine_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_tmp_mine_5"
                    android:text="清理缓存"
                    android:textColor="#090909"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="6.5dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_mine_more" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>