<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:id="@+id/tmp_repair_view_2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">


        <ImageView
            android:id="@+id/tmp_repair_text_1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="18dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/repair_acount_img" />

        <TextView
            android:id="@+id/repairs_name_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/tmp_repair_text_1"
            android:text="岳云鹏 00000000000"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/repair_details_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/repair_detail_img" />

    </RelativeLayout>

    <View
        android:id="@+id/tmp_repair_line_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tmp_repair_view_2"
        android:layout_marginTop="11dp"
        android:background="#E8E8E8" />

    <RelativeLayout
        android:id="@+id/tmp_repair_view_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmp_repair_line_3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tmp_repair_img_4"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/repair_start_time_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tmp_repair_img_4"
            android:text="提交时间"
            android:textColor="#6F6F6F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/repairs_start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2018-01-08  15:25"
            android:textColor="#6F6F6F"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmp_repair_view_4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tmp_repair_img_5"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/repair_end_time_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tmp_repair_img_5"
            android:text="完成时间"
            android:textColor="#6F6F6F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/repairs_end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2018-02-08  15:25"
            android:textColor="#6F6F6F"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>
