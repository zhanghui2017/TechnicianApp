<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/tmp_view_2"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tmp_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="单号"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tmp_text_1"
            android:layout_marginTop="11dp"
            android:text="APP001"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:text="2018-01-08 10:44"
            android:textColor="#242424"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:id="@+id/tmp_line_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tmp_view_2"
        android:layout_marginTop="11dp"
        android:background="#E8E8E8" />

    <LinearLayout
        android:id="@+id/tmp_view_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmp_line_3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单级别"
            android:textColor="#A7A7A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_lever_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修工单"
            android:layout_marginLeft="11dp"
            android:textColor="#343434"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tmp_view_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmp_view_4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备型号"
            android:textColor="#A7A7A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_model_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汽车设备"
            android:layout_marginLeft="11dp"
            android:textColor="#343434"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmp_view_5"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修地址"
            android:textColor="#A7A7A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洛阳市涧西区西园路6号"
            android:layout_marginLeft="11dp"
            android:textColor="#343434"
            android:textSize="12sp" />
    </LinearLayout>



    <ImageView
        android:id="@+id/order_type_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/order_begin_img"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
