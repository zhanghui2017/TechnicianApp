<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/img_message"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/tmp_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/img_message"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派单提醒"
            android:textColor="#090909"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="250.5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="李师傅您好，又有新的订单了，李师傅您好，又有新的订单了李师傅您好，又有新的订单了"
            android:textColor="#A7A7A7"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>