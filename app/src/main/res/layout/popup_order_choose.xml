<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pop_begin_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tmp_pop_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:text="待接单"
            android:textColor="#343434"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/pop_order_begin_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tmp_pop_1"
            android:layout_marginLeft="10dp"
            android:text="(0)"
            android:textColor="#FF343434"
            android:layout_centerVertical="true"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/pop_order_begin_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/pop_order_sel_img"
            android:visibility="visible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/pop_ing_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tmp_pop_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:text="工作中"
            android:textColor="#FF343434"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/pop_order_ing_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tmp_pop_2"
            android:layout_marginLeft="10dp"
            android:text="(0)"
            android:textColor="#FF343434"
            android:layout_centerVertical="true"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/pop_order_ing_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/pop_order_sel_img"
            android:visibility="invisible"/>
    </RelativeLayout>
