<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_order_fragment"
    tools:context="com.gengli.technician.activity.CheckFittingActivity">

    <RelativeLayout
        android:id="@+id/check_fitting_title"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_fitting_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看配件订单"
            android:textColor="#333333"
            android:textSize="17sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/check_fitting_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/check_fitting_title"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:layout_marginBottom="50dp"
        android:divider="@color/color_order_fragment"
        android:dividerHeight="1dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#F1F1F1"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计："
            android:textColor="#FF343434"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_check_fitting_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="#FF343434"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件"
            android:textColor="#FF343434"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
