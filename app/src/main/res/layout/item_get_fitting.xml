<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/img_get_fitting"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/tmp_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_fitting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="隧道钢筋网焊网机"
            android:textColor="#343434"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余"
                android:textColor="#A7A7A7"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/text_fitting_last_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#A7A7A7"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:textColor="#A7A7A7"
                android:textSize="11sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_minus_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/mibus_img" />

            <TextView
                android:id="@+id/text_fitting_cho_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/img_minus_bt"
                android:text="2件"
                android:textColor="#4373F1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_add_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/text_fitting_cho_count"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/add_img" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>